// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String
  password String
  resumes  Resume[]
}

// FIXIT: add resume title
model Resume {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  owner    User      @relation(fields: [ownerId], references: [id])
  ownerId  String    @db.ObjectId
  content  ResumeStructure
}

// same as PreviewStructure on client
type ResumeStructure {
  title           String @default("Untitled")
  builderForm     BuilderFormSection[]
  image           String
  theme           Theme
}

// store themes with their respective name
enum Theme {
  DEFAULT
}

type BuilderFormSection {
  id       String
  props    BuilderFormSectionProps
}

type BuilderFormSectionProps {
  title                String
  children             BuilderField[]
  groupType            GroupType
  defaultChildPosition DefaultChildPosition
  defaultChildType     DefaultChildType?
  isEditable           Boolean?
}

enum GroupType {
  FLAT 
  LIST
}

enum DefaultChildPosition {
  HEADER
  MAIN
  SIDE
}

enum DefaultChildType {
  SHORT 
  LONG
}

type BuilderField {
  id    String
  props BuilderFieldProps
}

type BuilderFieldProps {
  type          DefaultChildType
  name          String
  content       String
  isEditable    Boolean?
}