// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String
  password String
  resumes  Resume[]
}

// FIXIT: add resume title
model Resume {
  id       String          @id @default(auto()) @map("_id") @db.ObjectId
  owner    User            @relation(fields: [ownerId], references: [id])
  ownerId  String          @db.ObjectId
  theme    Theme
  title    String          @default("Untitled")
  sections ResumeSection[]
}

// store themes with their respective name
enum Theme {
  DEFAULT
}

type ResumeSection {
  id                   String
  title                String
  fields               Field[]
  defaultFieldPosition RenderSection
}

type Field {
  name     String
  content  String
  type     FieldType
  position RenderSection
}

enum FieldType {
  SHORT
  LONG
}

enum RenderSection {
  HEADER
  MAIN
  SIDE
  SPOTLIGHT
}
